{
  "manifest_version": 3,
  "name": "Focus Pal",
  "version": "1.0",
  "description": "A cute Pomodoro timer that keeps you focused!",
  "permissions": ["storage", "declarativeNetRequest"],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
